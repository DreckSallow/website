---
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/700.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dikson Aranda portfolio" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="keywords"
			content="portfolio, web, programador, frontend, dikson,"
		/>
		<meta name="og:title" content={title} />
		<meta name="og:description" content="Dikson Aranda portfolio" />
		<meta name="og:site_name" content="Dikson Aranda portfolio" />
		<meta name="type" content="website" />
		<link rel="icon" type="image/svg+xml" href="/brand-logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen w-screen font-poppins">
		<slot />
	</body>
</html>
